@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Order</h2>
<table id="products" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>PaymentType</th>
        <th>PaymentStatus</th>
        <th>OrderStatus</th>
        <th>TotalPrice</th>
        <th>Address</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(() => {
           var table = $("#products").DataTable({
               ajax: {
                   url: "/api/OrderApi/GetAllOrders",
                   dataSrc: ""
               },
               columns : [
                {
                    data : "payment_type",
                },
                {
                    data : "payment_status",
                },
                {
                    data : "order_status"
                },
                {
                    data : "total_price",
                },
                {
                    data : "address",
                }
                 
               ]
               
               }); 
        });
       
     
    </script>
}